@model TraversalCoreProject.ViewModels.UserRegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>
<!-- Coding by CodingLab | www.codinglabweb.com-->
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Traversal core kayıt olma ekranı </title>
    <link rel="stylesheet" href="~/Responsive Registraion or Sign up Form/style.css">
</head>
<body>
    <div class="wrapper">
        <h2>Kayıt ol</h2>
        <form method="post">
            <div class="input-box">
                <input type="text" placeholder="Adınız" required asp-for="@Model.Name">
            </div>
            <div class="input-box">
                <input type="text" placeholder="Soyadınız" required asp-for="@Model.SurName">
            </div>
            <div class="input-box">
                <input type="email" placeholder="Mail" required asp-for="@Model.Mail">
            </div>
            <div class="input-box">
                <input type="text" placeholder="Kullanıcı Adınız" required asp-for="@Model.UserName">
            </div>
            <div class="input-box">
                <input type="password" placeholder="Şifre" required asp-for="@Model.Password">
            </div>

            <div class="input-box">
                <input type="password" placeholder="Şifre tekrar" required asp-for="@Model.ConfirmPassword">
            </div>
           <div class=" alert-danger" asp-validation-summary="ModelOnly">

           </div>
            <div class="input-box button">
                <input type="Submit" value="Üye ol">
            </div>
            <div class="text">
                <h3>Zaten bir hesabım var. <a href="/Login/SignIn">Giriş yap</a></h3>
            </div>
        </form>
    </div>

</body>
</html>
