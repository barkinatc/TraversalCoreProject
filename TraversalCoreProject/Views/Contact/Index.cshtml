@model SendMailToUsVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaş</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/index">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Bizimle iletişime geç</h5>
                            <p class="mt-3 mb-4">
                                Selam, bize 7/24 fax, mail veya telefon yoluyla ulaşabilirsin.
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Email:</h6>
                            <p>
                                <a href="mailto:kankicim1212@gmail.com">
                                    kankicim3131@gmail.com
                                </a>
                            </p>
                            <h6 class="mt-4">Bizi ziyaret et:</h6>
                            <p> Cumhuriyet mahallesi Atatürk sokak No:1881 Ankara/Anıtkabir.</p>
                            <h6 class="mt-4">İletişim:</h6>
                            <p class="margin-top"><a href="tel:+09 531 871 58 03">+0242 814 59 58</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form asp-action="SendMail" asp-controller="Contact" method ="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" asp-for="Name" placeholder="İsmin*" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email"asp-for="UserMail" placeholder="Mail Adresin*" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Subject" placeholder="Konu*" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="Body" placeholder="Mesajını buraya yaz*" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Harita</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
</section>
