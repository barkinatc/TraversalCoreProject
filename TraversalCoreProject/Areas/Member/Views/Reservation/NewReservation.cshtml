@model MemberReservationAddVM
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Reservasyon Sayfası</h1>

<form method="post">
    <div class="form-group">
        <label class=" col-sm-2">Lokasyon</label>
        <select asp-for="Reservation.DestinationID" class="form-control">
            <option >Lütfen seçiniz</option>
            @foreach (var item in Model.Destinations)
            {
                <option value="@item.ID">@item.City</option>

            }
        </select>
    </div>
    
    <div class="form-group">
        <label class=" col-sm-2">Kişi Sayısı</label>
        <input type="text" asp-for="Reservation.PersonCount" class="form-control" />

    </div>
    <div class="form-group">
        <label class=" col-sm-2">Reservasyon Tarihi</label>
        <input asp-for="Reservation.CreatedDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label class=" col-sm-2">Eklemek istediğiniz bişey var mı ?</label>
        <input asp-for="Reservation.Description" type="text" class="form-control" />
    </div>
    <div>
        <button class=" btn btn-primary">
            Ekle
        </button>
    </div>

</form>



