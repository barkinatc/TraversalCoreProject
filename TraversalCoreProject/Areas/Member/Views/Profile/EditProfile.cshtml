@model TraversalCoreProject.ViewModels.UserEditVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<form method="post" enctype="multipart/form-data">
    <div class="row">

        <div class="col-sm-12">

            <section class="panel-heading">
                <header class="panel-heading">
                    Profil Düzenleme Sayfası
                </header>
                <div class=" panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Adınız</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Name" class="form-control" />

                        </div>
                    </div>

                    <div class="form-group">

                        <label class="col-sm-2">Soyadınız</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Surname" class="form-control" />

                        </div>
                    </div>


                    <div class="form-group">

                        <label class="col-sm-2">Şifre</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Password" class="form-control" />

                        </div>
                    </div>


                    <div class="form-group">

                        <label class="col-sm-2">Şifre Tekrar</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="ConfirmPassword" class="form-control" />

                        </div>
                    </div>



                    <div class="form-group">

                        <label class="col-sm-2">Telefon numaranız</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="PhoneNo" class="form-control" />

                        </div>
                    </div>

                    <div class="form-group">

                        <label class="col-sm-2">Mail</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Mail" class="form-control" />

                        </div>
                    </div>
                    <div class="form-group">

                        <label class="col-sm-2">Cinsiyet</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Gender" class="form-control" />

                        </div>
                    </div>
                    <br /><br />
                    <div class="form-group">
                        <label class="col-sm-2">resmi</label>
                        <div class="col-sm-11">
                            <input type="file" asp-for="Image" name="Image" class="form-control " />

                            <br />

                           
                        </div>
                    </div>
                    <div>
                        <button id="btn1" class=" btn btn-primary" >
                            Güncelle
                        </button>
                    </div>
                </div>
            </section>




            @if (!ViewData.ModelState.IsValid)
            {
                <script>
        Swal.fire({
            icon: 'error',
            title: 'Hata!',
            text: 'Aşağıdaki hataları düzeltiniz:',
            html: '@Html.Raw(string.Join("<br/>", ViewData.ModelState.Values.SelectMany(v => v.Errors).Select(e => e.ErrorMessage)))'
        });
                </script>
            }
            @if (TempData["SuccessMessage"] != null)
            {
                <script>
        Swal.fire({
            icon: 'success',
            title: 'Başarılı!',
            text: '@TempData["SuccessMessage"]'
        });
                    
                </script>
            }




        </div>


    </div>
</form>

