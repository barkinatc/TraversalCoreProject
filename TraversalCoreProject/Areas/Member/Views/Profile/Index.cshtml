@model TraversalCoreProject.ViewModels.UserEditVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<form method="post">
    <div class="row">

        <div class="col-sm-12">

            <section class="panel-heading">
                <header class="panel-heading">
                    Profil Düzenleme Sayfası
                </header>
                <div class=" panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Adınız</label>
                        <div class="col-sm-11">
                            <input type ="text"  asp-for="Name" class="form-control"/>
                            
                        </div>
                    </div>
                    
                    <div class="form-group">

                        <label class="col-sm-2">Soyadınız</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Surname" class="form-control" />

                        </div>
                    </div>

                    
                    <div class="form-group">

                        <label class="col-sm-2">Şifre</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Password" class="form-control" />

                        </div>
                    </div>

                   
                    <div class="form-group">

                        <label class="col-sm-2">Şifre Tekrar</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="ConfirmPassword" class="form-control" />

                        </div>
                    </div>

                    

                    <div class="form-group">

                        <label class="col-sm-2">Telefon numaranız</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="PhoneNo" class="form-control" />

                        </div>
                    </div>
                    
                    <div class="form-group">

                        <label class="col-sm-2">Mail</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Mail" class="form-control" />

                        </div>
                    </div>
                    <br /><br />
                    <div>
                        <button class=" btn btn-primary">
                            Güncelle
                        </button>
                    </div>
                </div>
            </section>

        </div>


    </div>
</form>

