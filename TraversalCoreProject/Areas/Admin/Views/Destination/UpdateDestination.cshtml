@using TraversalCoreProject.Areas.Admin.Models
@model AdminDestinationVM
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur rotası güncelleme sayfası</h1>

<form method="post" enctype="multipart/form-data">



    <div class="row">
        <div class="col-sm-12">
            <section class="panel-heading">

                <br />
                <div class=" panel-body">
                    <div class="form-group">
                        <label class="col-sm-2">Şehir ismi</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="City" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Fiyatı</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Price" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Kapasite</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="Capacity" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Kaç gün Kaç gece?</label>
                        <div class="col-sm-11">
                            <input type="text" asp-for="DayNight" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2">Açıklama</label>
                        <div class="col-sm-11">
                            <textarea asp-for="Description" class="form-control"></textarea>
                        </div>
                    </div>
                    <br />
                    <div>
                        <button type="submit" class="btn btn-outline-primary">
                            Güncelle
                        </button>
                    </div>
                </div>
            </section>
        </div>
    </div>




</form>