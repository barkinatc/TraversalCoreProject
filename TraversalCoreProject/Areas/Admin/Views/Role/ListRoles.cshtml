@model List<AdminAppRoleVM>
@{
    ViewData["Title"] = "ListRoles";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@if (Model.Count > 0)
{

    <table class=" table table-hover">
        <tr>
            <td>#</td>
            <td>Yetkisi</td>
            <td>Yetki Sil</td>
            <td>Yetki Güncelle</td>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td><a href="/Admin/Role/DeleteRole/@item.ID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Admin/Role/UpdateRole/@item.ID" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }



    </table>
}
else
{
    <h1>Her hangi bir rol bulunamadı</h1>
}
<td><a href="/Admin/Role/AddRole" class="btn btn-outline-success">Yeni Rol Ekle</a></td>
