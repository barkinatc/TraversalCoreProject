
@using Project.ENTITIES.Enums
@model AdminUpdateReservationVM
@{
    ViewData["Title"] = "AddReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rezervasyon Güncelleme Sayfası</h1>

<form method="post">
    <div class="row">

        @Html.HiddenFor(Model => Model.Reservation.ID)

        <div class="mb-3 col-md-6">
            <label for="zipCode" class="form-label">Kaç Kişi</label>
            <input type="text" asp-for="Reservation.PersonCount"
                   class="form-control" />
        </div>
        <div class="mb-3 col-md-6">
            <label for="zipCode" class="form-label">Açıklama</label>
            <input type="text" asp-for="Reservation.Description"
                   class="form-control" />
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label" for="country">Şehir</label>
            <select asp-for="Reservation.DestinationID" class="select2 form-select">
                <option>Şehir Seçiniz</option>
                @foreach (var item in Model.Destinations)
                {
                    <option value="@item.ID">@item.City</option>
                }
            </select>
            <input type="hidden" asp-for="Reservation.DestinationName" />
        </div>
        <div class="mb-3 col-md-6">
            <label class="form-label" for="country">Rezervasyon Durumu</label>
            <select asp-for="RezervasyonDurumu" class="select2 form-select">
                <option>Rezervasyonunun Durumu</option>

                @foreach (var value in Enum.GetValues(typeof(ReservationEnums)))
                {
                    <option value="@value">@Enum.GetName(typeof(ReservationEnums), value)</option>
                }
            </select>
        </div>
        <div class="mb-3 col-md-6">
            <label for="language" class="form-label">Tarih</label>
            <input type="date" asp-for="Reservation.CreatedDate" class=" form-control" />
        </div>
    </div>
    <div class="mt-2">
        <button type="submit" class="btn btn-primary me-2">Güncelle</button>
      
    </div>
</form>

