@model List<AdminContactMeVM>
@{
    ViewData["Title"] = "ListDeletedMessages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Silinmiş Mesajlar</h1>

<table class=" table table-hover">
    <tr>
        <td>Kimden</td>
        <td>Mail</td>
        <td>Konu</td>

        <td>Mesaj</td>

    </tr>
    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Name</td>
            <td>@item.Mail</td>
            <td>@item.Subject</td>

            <td><a href="/Admin/ContactMe/MessageInfo/@item.ID" class=" btn btn-outline-dark">Mesajı Aç</a></td>


        </tr>
    }
</table>
<td><a href="/Admin/ContactMe/ListContactMe" class=" btn btn-outline-info">Güncel Mesajları Göster</a></td>

