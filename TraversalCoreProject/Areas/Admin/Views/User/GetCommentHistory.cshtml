@model List<AdminCommentVM>
@{
    ViewData["Title"] = "GetCommentHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{
    var isHeaderPrinted = false;
}

@foreach (var item in Model)
{
    @if (!isHeaderPrinted)
    {
        <h1>@item.AppUserName @item.AppUserSurname ' Yaptığı Yorumlar</h1>
        isHeaderPrinted = true;
    }




}

@if (Model.Count > 0)
{

    <table class=" table table-responsive">
        <tr>
            <td>#</td>
            <td>Hangi Şehir İçin</td>
            <td>Yaptığı Yorum</td>
            <td>Nezaman Yapmış</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ID</th>
                <th>@item.DestinationName</th>
                <th>@item.CommentContent</th>
                <th>@item.CreatedDate</th>
            </tr>
        }
    </table>
}
else
{
    <h1>Bu kullanıcının hiç Yorumu bulunmamaktadır</h1>
}

