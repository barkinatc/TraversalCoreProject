@model List<AdminReservationVM>
@{
    ViewData["Title"] = "GetReservationHistory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{
    var isHeaderPrinted = false;
}

@foreach (var item in Model)
{
    @if (!isHeaderPrinted)
    {
        <h1>@item.AppUserName @item.AppUserSurName 'nin Rezervasyonları</h1>
        isHeaderPrinted = true;
    }




}

@if (Model.Count > 0)
{

    <table class=" table table-responsive">
        <tr>
            <td>#</td>
            <td>Şehir</td>
            <td>Rezervasyon Durumu</td>
            <td>Rezervasyon Tarihi</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.ID</th>
                <th>@item.DestinationName</th>
                <th>@item.RezervasyonDurumu</th>
                <th>@item.CreatedDate</th>
            </tr>
        }
    </table>
}
else
{
    <h1>Bu kullanıcının hiç rezervasyonu bulunmamaktadır</h1>
}

